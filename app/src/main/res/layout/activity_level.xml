<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LevelActivity">

    <ImageButton
        android:id="@+id/level1"
        android:layout_width="63dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/star_off"
        android:onClick="gotolevel1"/>

    <ImageButton
        android:id="@+id/level2"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="92dp"
        app:layout_constraintBottom_toTopOf="@+id/level1"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/star_off"
        android:onClick="gotolevel2"/>

    <ImageButton
        android:id="@+id/level3"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/level2"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/star_off"
        android:onClick="gotolevel3"/>

    <ImageButton
        android:id="@+id/level4"
        android:layout_width="69dp"
        android:layout_height="58dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/level3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/star_off"
        android:onClick="gotolevel4"/>

    <ImageButton
        android:id="@+id/exitbtn"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="8dp"
        android:onClick="exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <TextView
        android:id="@+id/level1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="140dp"
        android:text="level1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/level1"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="level1" />

    <TextView
        android:id="@+id/level2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="132dp"
        android:text="level2"
        app:layout_constraintBottom_toTopOf="@+id/level1text"
        app:layout_constraintEnd_toStartOf="@+id/level2"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="level2" />

    <TextView
        android:id="@+id/level3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="88dp"
        android:text="level3"
        app:layout_constraintBottom_toTopOf="@+id/level2text"
        app:layout_constraintEnd_toStartOf="@+id/level3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/level4text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="67dp"
        android:text="level4"
        app:layout_constraintBottom_toTopOf="@+id/level3text"
        app:layout_constraintEnd_toStartOf="@+id/level4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"
        tools:text="level4" />
</android.support.constraint.ConstraintLayout>