<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Level2Activity">

    <com.example.huarongdao.Klotski
        android:id="@+id/main_klotski"
        android:layout_width="401dp"
        android:layout_height="594dp"
        app:blockDrawable1x1="@mipmap/bing"
        app:blockDrawable1x2a="@mipmap/zhaoyun"
        app:blockDrawable1x2b="@mipmap/machao"
        app:blockDrawable1x2c="@mipmap/huangzhong"
        app:blockDrawable2x1a="@mipmap/guanyu"
        app:blockDrawable2x1b="@mipmap/zhangfei"
        app:blockDrawable2x2="@mipmap/caocao"
        app:blockSpacing="3dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="209dp"
        android:layout_height="104dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:lineSpacingExtra="12sp"
        android:text="第二关：层拦叠嶂"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="第二关：层拦叠嶂" />

    <Button
        android:id="@+id/button"
        android:layout_width="78dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="73dp"
        android:onClick="back"
        android:text="返回" />

    <Button
        android:id="@+id/button2"
        android:layout_width="74dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-649dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginBottom="14dp"
        android:text="下一关"
        android:onClick="next"/>
</RelativeLayout>
