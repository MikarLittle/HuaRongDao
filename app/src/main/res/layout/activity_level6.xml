<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Level6Activity"
    android:background="@drawable/backimage">

    <com.example.huarongdao.Klotski
        android:id="@+id/main_klotski"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:blockDrawable1x1="@mipmap/bing3"
        app:blockDrawable1x2a="@mipmap/machao2"
        app:blockDrawable1x2b="@mipmap/huangzhong2"
        app:blockDrawable2x1a="@mipmap/zhangfei2"
        app:blockDrawable2x1b="@mipmap/zhaoyun2"
        app:blockDrawable2x1c="@mipmap/guanyu2"
        app:blockDrawable2x2="@mipmap/caocao2"
        app:blockSpacing="3dp" />


    <!--设置返回按钮的相对位置-->
    <Button
        android:id="@+id/back_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:onClick="back"
        android:background="@drawable/cry"/>

    <!--设置下一关按钮的相对位置-->
    <Button
        android:id="@+id/next_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:onClick="next"
        android:background="@drawable/back_icon" />

    <!--设置关卡名区域的相对位置-->
    <TextView
        android:id="@+id/level_name"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/next_btn"
        android:layout_toLeftOf="@+id/next_btn"
        android:layout_toEndOf="@+id/back_btn"
        android:layout_toRightOf="@+id/back_btn"
        android:gravity="center"
        android:text="@string/level_name_6"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeMaxTextSize="80sp"
        android:autoSizeStepGranularity="1sp"
        android:maxLines="1"
        android:textStyle="bold" />
</RelativeLayout>
